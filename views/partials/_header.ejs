<header>
  <nav class="navbar navbar-expand-md navbar-light" style="background-color:#34eba4;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!-- logout -->
      <% if (username) { %>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
        <span class="navbar-text mr-sm-2 font-weight-bold">
          Logged in as: <%= username %>
        </span>
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Logout</button>
      </form>
      <% } else { %>
      <!-- login -->
      <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
        <input class="form-control mr-sm-2" type="text" placeholder="User Name" aria-label="User Name" name="username">
        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Login</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>