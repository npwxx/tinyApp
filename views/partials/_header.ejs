<header>
  <nav class="navbar navbar-expand-md navbar-light" style="background-color:#34eba4;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav mr-auto">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <!-- logout -->
      <% if (user) { %>
      <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
        <span class="navbar-text mr-sm-2 font-weight-bold">
          Logged in as: <%= user.email %>
        </span>
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Logout</button>
      </form>
      <% } else { %>
        <!-- login -->
        <a class="btn btn-outline-dark my-2 my-sm-0 mr-sm-4" href="/login" role="button">Login</a>
        <a class="btn btn-outline-dark my-2 my-sm-0 mr-sm-2" href="/register" role="button">Register</a>
      <% } %>
    </div>
  </nav>
</header>